<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.astuetz.PagerSlidingTabStrip xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ftabs"
        style="@style/PagerTabStripTextStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        app:paddingStart="72dp"
        app:pstsIndicatorColor="?attr/colorAccent"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="true"
        app:pstsTextStyle="bold" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
